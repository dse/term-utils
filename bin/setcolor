#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset
shopt -s lastpipe
OSC='\e]'
ST='\e\\'
if (( $# < 2 )) ; then
    >&2 echo "setcolor <num> <spec>"
    >&2 echo "<num> = 0 to 7, 8 to 15 for colors; 16 to 87 or 16 to 255"
    exit 1
fi
color="$1"
spec="$2"
echo -n -e "${OSC}4;${color};${spec}${ST}"
